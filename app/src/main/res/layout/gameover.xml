<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#0e1238">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:layout_margin="30dp"
        android:id="@+id/winner_message"
        android:layout_gravity="center_horizontal"
        android:textColor="#fffcfc"
        android:textSize="30dp"/>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_margin="30dp"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_below="@id/winner_message"
        android:layout_marginBottom="40dp"
        android:fillViewport="true">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/highscoreslist"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal" />

    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:enabled="true"
        android:text="@string/nieuwspel"
        android:onClick="clickNewGame"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>