<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".start"
    android:background="#0e1238">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:src="@drawable/design" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:layout_height="30dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/player1"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:background="#33b7b7ba"
        android:textColor="#fffdfe"
        android:hint=" Player 1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_margin="8dp"
        android:layout_height="30dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/player2"
        android:layout_below="@+id/player1"
        android:layout_centerHorizontal="true"
        android:background="#33b7b7ba"
        android:textColor="#fffdfe"
        android:hint=" Player 2" />

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:onClick="onClick"
        android:id="@+id/imageButton"
        android:layout_marginTop="30dp"
        android:background="@null"
        android:src="@drawable/startghost"
        android:layout_below="@+id/player2"
        android:layout_centerHorizontal="true"
       />
</RelativeLayout>
